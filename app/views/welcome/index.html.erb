<div class="page-header">
    <h1>Dashboard</h1>
</div>


<div class="row">

    <div class="span4">
        <h2>Servers</h2>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <td>&nbsp;</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>FTP</th>
                    <td><span class="label label-success">ON</span></td>
                </tr>
                <tr>
                    <th>FTP</th>
                    <td><span class="label label-important">OFF</span></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="span8">
        <h2>Nearly full accesses</h2>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th width="160">#</th>
                    <th>domain</th>
                    <th width="160">space</th>
                </tr>
            </thead>
            <tbody>
                <% @nearly_full_accesses.each do |a| -%>
                <tr class="error">
                    <td><%= link_to a.identifier, access_path(a) %></td>
                    <td><%= a.domain %></td>
                    <td>
                        <div class="progress progress-danger">
                            <div class="bar" style="width: 90%;"></div>
                        </div>
                    </td>
                </tr>
                <%- end %>
            </tbody>
        </table>
    </div>
</div>
